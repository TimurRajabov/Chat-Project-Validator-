@page "/user-chats"
@attribute [Authorize]
@inherits UserChatsBase


@if (Chats.Count > 0)
{
  <ChattingPage Chats="Chats"></ChattingPage>
}
else
{
    <h1>Hozircha sizda chatlar mavjud emas</h1>
}





<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>



